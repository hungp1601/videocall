<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendRequestActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_notification"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_image"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/name_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_notification"
        android:layout_marginTop="5dp"
        android:text="user name"
        android:textAlignment="center"
        android:textColor="@color/mauChuDao"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/request_accept_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_notification"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="79dp"
        android:background="@color/mauChuDao"
        android:padding="5dp"
        android:text="Accept Friend Request"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13dp"></Button>

    <Button
        android:id="@+id/request_decline_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_accept_btn"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="79dp"
        android:layout_marginBottom="12dp"
        android:background="@color/teal_700"
        android:padding="5dp"
        android:text="Cancel Friend Request"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13dp" />

</RelativeLayout>